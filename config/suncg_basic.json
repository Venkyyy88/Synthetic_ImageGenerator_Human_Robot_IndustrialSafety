// Args: <cam_file> <obj_file> <output_dir>
{
  "setup": {
    "blender_install_path": "/home_local/<env:USER>/blender/",
    "blender_version": "blender-2.80-linux-glibc217-x86_64",
    "pip": [
      "h5py",
      "imageio"
    ]
  },
  "global": {
    "all": {
      "output_dir": "<args:2>"
    },
    "renderer": {
      "pixel_aspect_x": 1.333333333
    }
  },
  "modules": [
    {
      "name": "main.Initializer",
      "config": {}
    },
    {
      "name": "loader.SuncgLoader",
      "config": {
        "path": "<args:1>"
      }
    },
    {
      "name": "camera.CameraLoader",
      "config": {
        "path": "<args:0>",
        "file_format": "location rotation_forward_vector _ _ _ fov_half _ _",
        "source_frame": ["X", "-Z", "Y"]
      }
    },
    {
      "name": "materials.SuncgMaterials",
      "config": {}
    },
    {
      "name": "renderer.NormalRenderer",
      "config": {
        "output_key": "normals"
      }
    },
    {
      "name": "renderer.SegMapRenderer",
      "config": {
        "render_depth": true
      }
    },
    {
      "name": "renderer.RgbRenderer",
      "config": {
        "output_key": "colors",
	"samples": 255
      }
    },
    {
      "name": "writer.Hdf5Writer",
      "config": {
        "postprocessing_modules": {
          "seg": [
            {
              "name": "postprocessing.NoiseRemoval",
              "config": {}
            },
            {
              "name": "postprocessing.TrimRedundantChannels",
              "config": {}
            }
          ],
          "depth":[
            {
              "name": "postprocessing.TrimRedundantChannels",
              "config": {}
            }
          ]
        }
      }
    }
  ]
}
